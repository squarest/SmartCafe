<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".storage.presentation.storage.StorageActivity">

        <android.support.v4.widget.SlidingPaneLayout
            android:id="@+id/activity_main_sliding_pane"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/drawer_list" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgroundColor"
                android:elevation="@dimen/drawer_elevation"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/activity_main_toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:layout_marginLeft="@dimen/main_activity_right_left_margin"
                            android:layout_marginRight="@dimen/main_activity_right_left_margin"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/add_category_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:gravity="right|center_vertical"
                                android:text="НОВАЯ КАТЕГОРИЯ"
                                android:textColor="@color/darkBlue"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.Toolbar>

                    <ExpandableListView
                        android:id="@+id/storage_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/main_activity_right_left_margin"
                        android:layout_marginRight="@dimen/main_activity_right_left_margin"
                        android:layout_marginTop="16dp"
                        android:childDivider="@drawable/divider_line"
                        android:divider="@color/darkBlue"
                        android:dividerHeight="2dp"
                        tools:listitem="@layout/drawer_list_item" />
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:elevation="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.75"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/add_product_button"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="НОВЫЙ ПРОДУКТ"
                        android:textColor="@color/darkBlue"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/add_product_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/main_activity_right_left_margin"
                        android:layout_marginRight="@dimen/main_activity_right_left_margin"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="#fff"
                        android:clickable="false"
                        android:visibility="invisible"
                        app:cardElevation="8dp"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <EditText
                                android:id="@+id/ingredient_name"
                                style="@style/edit_text"
                                android:hint="Название" />

                            <Spinner
                                android:id="@+id/category_spinner"
                                style="@style/edit_text" />

                            <EditText
                                android:id="@+id/ingredient_quantity"
                                style="@style/edit_text"
                                android:hint="Остаток на складе"
                                android:inputType="numberDecimal" />

                            <Spinner
                                android:id="@+id/units_spinner"
                                style="@style/edit_text" />

                            <EditText
                                android:id="@+id/ingredient_cost"
                                style="@style/edit_text"
                                android:hint="Цена"
                                android:inputType="numberDecimal" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/product_cancel_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/round_cancel_button"
                                    android:text="Отмена"

                                    android:textColor="@color/darkGrey" />

                                <Button
                                    android:id="@+id/product_submit_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/round_done_button"
                                    android:text="Готово"
                                    android:textColor="#fff" />

                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.SlidingPaneLayout>
    </LinearLayout>
</layout>