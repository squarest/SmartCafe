<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="analytics"
            type="com.example.clevercafe.entities.Analytics" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/current_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Сегодня \n16 августа"
            android:textColor="@color/darkBlue"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/proceeds"
                style="@style/analytics_today_title"
                android:text="@{String.valueOf(analytics.proceeds)}"
                tools:text="25 000,00 р" />

            <TextView
                style="@style/analytics_today_subtitle"
                android:text="выручка" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profit"
                style="@style/analytics_today_title"
                android:text="@{String.valueOf(analytics.profit)}"
                tools:text="15 000,00 р" />

            <TextView
                style="@style/analytics_today_subtitle"
                android:text="прибыль" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orders"
                style="@style/analytics_today_title"
                android:text="@{String.valueOf(analytics.orders)}"
                tools:text="25" />

            <TextView
                style="@style/analytics_today_subtitle"
                android:text="заказов" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/average_check"
                style="@style/analytics_today_title"
                android:text="@{String.valueOf(analytics.averageCheck)}"
                tools:text="1 000 р" />

            <TextView
                style="@style/analytics_today_subtitle"
                android:text="средний чек" />
        </LinearLayout>
    </LinearLayout>
</layout>