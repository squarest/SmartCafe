<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activities.IngredientActivity">

    <ExpandableListView
        android:id="@+id/drawer_list_view"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/drawer_background"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="horizontal">

        <ExpandableListView
            android:id="@+id/storage_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:childDivider="@drawable/divider_line"
            android:divider="@color/orderButtonColor"
            android:dividerHeight="2dp"
            tools:listitem="@layout/drawer_list_item" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#fff" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ingredient_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:childDivider="@drawable/divider_line"
            android:divider="@color/orderButtonColor"
            android:dividerHeight="2dp"
            tools:listitem="@layout/ingredient_element" />
    </LinearLayout>
</LinearLayout>